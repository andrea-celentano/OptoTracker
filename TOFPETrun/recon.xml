<?xml version="1.0" encoding="UTF-8"?>
<OptoTracker>
 <Recon>
   <control>
     <doProof>0</doProof>
     <doProofDiag>1</doProofDiag>
     <numberOfWorkers>7</numberOfWorkers>
     <numberOfIterations>1</numberOfIterations>
     <verboseLevel>3</verboseLevel>
     <numberOfEvents>-1</numberOfEvents> 
   </control>
   <execute>
     <driver name="EventMarker"/>
     <driver name="TofpetSetupHandler"/>
     <driver name="Dummy"/>
     <driver name="Save"/>
   </execute>
   <drivers>
      <driver name="EventMarker" type="TEventMarkerDriver">
		<setInterval>100</setInterval>
      </driver>
     <driver name="TofpetSetupHandler" type="TTofpetSetupHandlerDriver">  
		<setSource>0</setSource>
		<setFileName>"PrototypeSetup.dat"</setFileName>
      </driver> 
      <driver name="Dummy" type="TTofpetDummyAnalysisDriver">  
		<setCollectionRawName>"TofpetHitRaw"</setCollectionRawName>
      </driver>
      <driver name="Save" type="TRootSaveDriver">
		<setOutFileName>"tofpet.root"</setOutFileName>
      </driver>
   </drivers>
 </Recon>
</OptoTracker>
 
 
 
